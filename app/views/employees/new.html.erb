<%= form_tag '/employees' do %>

<% if @employee.errors.any? %>
    <h2>There were some errors:</h2>
    <ul id="error_explanation">
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %> 

  <div class="field<%= ' field_with_errors' if @employee.errors[:first_name].any? %>">
    <%= label_tag "first_name", "First Name" %>
    <%= text_field_tag "first_name", @employee.first_name %>
  </div>

<div class="field<%= ' field_with_errors' if @employee.errors[:last_name].any? %>">
    <%= label_tag "last_name", "Last Name" %>
    <%= text_field_tag "last_name", @employee.last_name %>
  </div>

  <div class="field<%= ' field_with_errors' if @employee.errors[:alias].any? %>">
    <%= label_tag "alias", "Alias" %>
    <%= text_field_tag "alias", @employee.alias %>
  </div>

  <div class="field<%= ' field_with_errors' if @employee.errors[:title].any? %>">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @employee.title %>
  </div>

  <div class="field<%= ' field_with_errors' if @employee.errors[:office].any? %>">
    <%= label_tag "office", "Office" %>
    <%= text_field_tag "office", @employee.office %>
  </div>

  <div class="field<%= ' field_with_errors' if @employee.errors[:img_url].any? %>">
    <%= label_tag "img_url", "Image URL" %>
    <%= text_field_tag "img_url", @employee.img_url %>
  </div>

  <div class="field<%= ' field_with_errors' if @employee.errors[:dog_id].any? %>">
    <%= label_tag "dog_id", "Dog" %>
    <%= select_tag "dog_id", options_from_collection_for_select(Dog.all, "id", "name") %>
  </div>

  <%= submit_tag "Create" %>
<% end %> 